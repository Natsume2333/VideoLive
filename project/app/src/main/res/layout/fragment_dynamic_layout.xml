<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@color/admin_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top_content"
        android:background="@drawable/bg_topr5"
        android:paddingTop="6dp">

        <com.qmuiteam.qmui.widget.QMUIViewPager
            android:id="@+id/roll_view_viewpage"
            style="@style/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <View
        style="@style/h_line"
        android:layout_height="1px"
        android:layout_below="@+id/rl_top_content" />

    <RelativeLayout
        android:id="@+id/rl_top_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/admin_color">

        <com.qmuiteam.qmui.widget.QMUITabSegment
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp" />

        <ImageView
            android:id="@+id/iv_dynamic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_upload_media" />

    </RelativeLayout>


</RelativeLayout>